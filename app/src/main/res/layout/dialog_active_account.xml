<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray_mos"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:drawableLeft="@drawable/ic_alert"
        android:background="@color/color_white"
        android:drawablePadding="@dimen/dp_10"
        android:drawableStart="@drawable/ic_alert"
        android:fontFamily="@string/font_serif"
        android:text="Tài khoản chưa kích hoạt, vui lòng hoàn thiện thông tin cá nhân và đăng ký công ty."
        android:textSize="@dimen/sp_14"
        android:textAllCaps="false"
        android:textColor="@color/color_black"
        android:gravity="center_vertical"
        tools:ignore="UnusedAttribute"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_account"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/ic_account"
            android:fontFamily="@string/font_serif"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="@string/info_personal"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/color_white"
            android:drawableEnd="@drawable/ic_next_right"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/ic_next_right"
            android:fontFamily="@string/font_serif"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="@string/complete"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            tools:ignore="UnusedAttribute" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:drawableLeft="@drawable/ic_company"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/ic_company"
            android:fontFamily="@string/font_serif"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="@string/info_new_company"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/color_white"
            android:drawableEnd="@drawable/ic_next_right"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/ic_next_right"
            android:fontFamily="@string/font_serif"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="@string/register"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            tools:ignore="UnusedAttribute" />
    </RelativeLayout>

</LinearLayout>
