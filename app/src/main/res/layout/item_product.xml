<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/dp_3"
    app:cardCornerRadius="@dimen/dp_3"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/image_product"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:background="@drawable/ic_placeholder"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:background="@drawable/border_price"
                android:padding="@dimen/dp_10"
                android:textColor="@color/color_red_mos"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap"
                />
            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_edits"
                android:tint="@color/color_orange_mos"
                tools:ignore="ContentDescription,VectorDrawableCompat"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_5"
            tools:ignore="UselessLeaf"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/dp_5"
                android:textColor="@color/color_orange_mos"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20"
                android:background="@color/color_gray"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_7"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_marginStart="@dimen/dp_7"
                android:ellipsize="marquee"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/color_dark_slate_gray"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
