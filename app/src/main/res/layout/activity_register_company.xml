<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="vn.needy.vendor.screen.registerCompany.RegisterCompanyViewModel"
            />
    </data>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".screen.registerCompany.RegisterCompanyActivity"
            tools:ignore="ScrollViewSize">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/register_company"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_18"
                        />
                    <ImageButton
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        app:srcCompat="@drawable/ic_back_left"
                        android:background="@color/transparent"
                        android:onClick="@{() -> viewModel.onBackPressed()}"
                        />
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/containerInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/dp_200"
                android:paddingTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_white" >
                <EditText
                    android:id="@+id/text_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:drawableLeft="@drawable/ic_company_gray"
                    android:background="@drawable/background_text"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableStart="@drawable/ic_company_gray"
                    android:fontFamily="@string/font_serif"
                    android:text="@={viewModel.companyName}"
                    android:hint="@string/company_name"
                    android:inputType="textCapWords"
                    android:textAllCaps="false"
                    android:paddingEnd="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_10"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/gray70"
                    app:errorText="@{viewModel.companyNameError}"
                    tools:ignore="UnusedAttribute"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray27"
                    android:layout_below="@+id/text_company_name"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    />
                <EditText
                    android:id="@+id/text_office_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_company_name"
                    android:padding="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:drawableLeft="@drawable/ic_home_map"
                    android:background="@drawable/background_text"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableStart="@drawable/ic_home_map"
                    android:fontFamily="@string/font_serif"
                    android:text="@={viewModel.officeAddress}"
                    android:hint="@string/office_address"
                    android:inputType="textCapWords"
                    android:textAllCaps="false"
                    android:paddingEnd="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_10"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/gray70"
                    app:errorText="@{viewModel.officeAddressError}"
                    tools:ignore="UnusedAttribute"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray27"
                    android:layout_below="@+id/text_office_address"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"/>
                <EditText
                    android:id="@+id/text_store_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_office_address"
                    android:padding="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:drawableLeft="@drawable/ic_store_gray"
                    android:background="@drawable/background_text"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableStart="@drawable/ic_store_gray"
                    android:fontFamily="@string/font_serif"
                    android:text="@={viewModel.storeName}"
                    android:hint="@string/store_name"
                    android:inputType="textCapWords"
                    android:textAllCaps="false"
                    android:paddingEnd="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_10"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/gray70"
                    app:errorText="@{viewModel.storeNameError}"
                    tools:ignore="UnusedAttribute"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray27"
                    android:layout_below="@+id/text_store_name"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray27"
                    android:layout_below="@+id/text_store_name"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_store_name"
                    android:layout_marginBottom="@dimen/dp_5"
                    >
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/locateButton"
                        android:drawableLeft="@drawable/ic_home_map"
                        android:background="@drawable/background_text"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableStart="@drawable/ic_home_map"
                        android:fontFamily="@string/font_serif"
                        android:text="@={viewModel.storeAddress}"
                        android:hint="@string/store_address"
                        android:inputType="textCapWords"
                        android:textAllCaps="false"
                        android:paddingEnd="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingStart="@dimen/dp_10"
                        android:textColor="@color/color_black"
                        android:textColorHint="@color/gray70"
                        android:textSize="@dimen/sp_16"
                        app:errorText="@{viewModel.storeAddressError}"
                        tools:ignore="UnusedAttribute"
                        />

                    <ImageButton
                        android:id="@+id/locateButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_map_marker"
                        android:padding="@dimen/dp_15"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:onClick="@{() -> viewModel.onPositionClick()}"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/intro_register_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/containerInput"
                android:layout_marginTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:onClick="@{() -> viewModel.onSupportClick()}"
                android:text="@string/intro_register_company"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_17"/>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:fontFamily="@string/font_serif"
                android:text="@string/done"
                android:onClick="@{() -> viewModel.onRegisterClick()}"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                tools:ignore="UnusedAttribute"
                />
        </RelativeLayout>
    </ScrollView>
</layout>
