<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="vn.needy.vendor.screen.createProduct.childProduct.ItemChildProductViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/dp_3"
        app:cardCornerRadius="@dimen/dp_3"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_product"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ic_placeholder"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription" />

                <CheckBox
                    android:checked="@{viewModel.isChecked}"
                    android:focusable="false"
                    android:id="@+id/check"
                    android:onClick="@{() -> viewModel.onChecked(check)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_5"
                    android:background="@android:color/transparent"
                    android:button="@drawable/ic_circle_checkbox"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_container"
                android:ellipsize="marquee"
                android:lineSpacingExtra="@dimen/dp_4"
                android:maxLines="2"
                android:padding="@dimen/dp_5"
                android:text="@{viewModel.name}"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <RelativeLayout
                android:id="@+id/fee_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/extras_info">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/color_white"
                    android:fontFamily="@string/font_serif"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_5"
                    android:text="@{viewModel.price}"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sp_17"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_trunk_mini"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableStart="@drawable/ic_trunk_mini"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:padding="@dimen/dp_5"
                    android:text="miễn phí"
                    android:textColor="@color/gray70"
                    android:textSize="@dimen/sp_10" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/extras_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <RatingBar
                    android:id="@+id/rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4.5"
                    android:stepSize="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rating"
                    android:maxLines="1"
                    android:padding="@dimen/dp_5"
                    android:text="(200)"
                    android:textColor="@color/gray70"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="1"
                    android:padding="@dimen/dp_5"
                    android:text="Đã bán 60"
                    android:textColor="@color/gray70"
                    android:textSize="@dimen/sp_10" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>