<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="vn.needy.vendor.screen.mainPage.MainPageViewModel" />
        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewSize"
        android:background="@color/color_white">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/color_white"
                app:contentInsetEnd="@dimen/dp_10"
                app:contentInsetLeft="@dimen/dp_10"
                app:contentInsetRight="@dimen/dp_10"
                app:contentInsetStart="@dimen/dp_10"
                app:elevation="@dimen/dp_4">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_8">

                    <RadioGroup
                        android:checkedButton="@+id/offer"
                        android:id="@+id/toggle"
                        android:layout_toLeftOf="@+id/ic_search"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/pink_out_line"
                        android:onCheckedChanged="@{viewModel::onCheckedChanged}"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:id="@+id/price_now"
                            android:background="@drawable/toggle_widget_background"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:button="@null"
                            android:gravity="center"
                            android:checked="@{!viewModel.plChecked}"
                            android:text="Giá trước"
                            android:textColor="@color/color_white" />

                        <RadioButton
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:id="@+id/price_later"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/toggle_widget_background"
                            android:button="@null"
                            android:gravity="center"
                            android:text="Giá sau"
                            android:checked="@{viewModel.plChecked}"
                            android:textColor="@color/color_white" />
                    </RadioGroup>

                    <ImageView
                        android:scaleType="center"
                        android:layout_toLeftOf="@+id/ic_message"
                        android:id="@+id/ic_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        app:srcCompat="@drawable/ic_search_orange_mos" />

                    <ImageView
                        android:id="@+id/ic_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        app:srcCompat="@drawable/ic_message" />
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:id="@+id/top_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_bar"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@{@drawable/ic_label}"
                android:drawablePadding="@dimen/dp_10"
                android:drawableStart="@{@drawable/ic_label}"
                android:fontFamily="@string/font_serif"
                android:padding="@dimen/dp_10"
                android:gravity="start|center_vertical"
                android:text="@{viewModel.categoryTitle}"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_16"
                android:onClick="@{() -> viewModel.onClickCategories()}"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@{@drawable/ic_next_right}"
                android:drawablePadding="@dimen/dp_10"
                android:drawableEnd="@{@drawable/ic_next_right}"
                android:fontFamily="@string/font_serif"
                android:gravity="end|center_vertical"
                android:padding="@dimen/dp_10"
                android:text="Bán chạy nhất"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_16"
                tools:ignore="UnusedAttribute"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_product"
            android:background="@color/color_white">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_1"
                android:layout_marginEnd="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_1"
                android:layout_marginStart="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="vertical"
                app:layoutManager="LinearLayoutManager" />

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_15"
            android:onClick="@{() -> viewModel.onClickAddProduct()}"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_plus_white" />
    </RelativeLayout>
</layout>
