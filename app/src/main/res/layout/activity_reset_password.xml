<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="vn.needy.vendor.screen.resetPassword.ResetPasswordViewModel"
            />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".screen.resetPassword.ResetPasswordActivity"
            tools:ignore="ScrollViewSize">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimaryDark"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/reset_password"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_18"
                        />
                    <ImageButton
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        app:srcCompat="@drawable/ic_back_left"
                        android:background="@color/transparent"
                        android:onClick="@{() -> viewModel.onBackPressed()}"
                        />
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

            <TextView
                android:id="@+id/text_intro_get"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_120"
                android:text="@string/intro_reset_password"
                android:textAlignment="center"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/color_white"
                />

            <RelativeLayout
                android:id="@+id/containerInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_intro_get"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/color_white">

                <RelativeLayout
                    android:id="@+id/containerInputPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_otp"
                    >
                    <EditText
                        android:id="@+id/text_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_toLeftOf="@+id/viewPasswordButton"
                        android:background="@drawable/background_text"
                        android:drawableLeft="@{@drawable/ic_lock}"
                        android:drawablePadding="@dimen/dp_20"
                        android:drawableStart="@{@drawable/ic_lock}"
                        android:fontFamily="serif"
                        android:text="@={viewModel.password}"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:paddingEnd="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingStart="@dimen/dp_10"
                        android:textColor="@color/color_black"
                        android:textColorHint="@color/gray70"
                        app:errorText="@{viewModel.passwordError}"
                        tools:ignore="UnusedAttribute"
                        />
                    <ImageButton
                        android:id="@+id/viewPasswordButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_10"
                        app:srcCompat="@drawable/ic_eye_off"
                        android:background="@color/color_white"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/dp_20"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray27"
                    android:layout_below="@+id/containerInputPassword"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"/>
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_100"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_below="@+id/containerInput"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@string/font_serif"
                android:text="@string/done"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:onClick="@{() -> viewModel.onClickResetPassword()}"
                tools:ignore="UnusedAttribute"
                />
        </RelativeLayout>
    </ScrollView>
</layout>
