<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="vn.needy.vendor.screen.companyProfile.CompanyViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_gray_white">

        <ScrollView
            android:id="@+id/sv_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="ScrollViewSize">

                <RelativeLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_170"
                    android:background="@color/color_gray_mos">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" />

                    <vn.needy.vendor.widget.CircleImageView
                        android:id="@+id/avatar"
                        android:layout_width="@dimen/dp_56"
                        android:layout_height="@dimen/dp_56"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@drawable/ic_placeholder" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_35"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_toRightOf="@+id/avatar"
                        android:fontFamily="@string/font_serif"
                        android:text="@string/not_set"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_16" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/headerNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_serif"
                        android:text="@string/company_number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:id="@+id/companyNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/headerNumber"
                        android:drawableLeft="@drawable/ic_credit_card_mini"
                        android:drawablePadding="@dimen/dp_15"
                        android:drawableStart="@drawable/ic_credit_card_mini"
                        android:fontFamily="@string/font_serif"
                        android:text="@string/auto_generate_after_register"
                        android:textColor="@color/gray70"
                        android:textSize="@dimen/sp_13"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/companyNumber"
                        android:background="@color/color_white"
                        android:fontFamily="@string/font_serif"
                        android:text="https://needy.vn/shopmini"
                        android:textColor="@color/color_orange_mos"
                        android:textSize="@dimen/sp_10"
                        android:visibility="gone"
                        tools:ignore="UnusedAttribute" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/color_white"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_serif"
                        android:text="Tên hiển thị"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        tools:ignore="UnusedAttribute" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_text"
                        android:drawableEnd="@drawable/ic_check_circle_mini"
                        android:drawablePadding="@dimen/dp_15"
                        android:drawableRight="@drawable/ic_check_circle_mini"
                        android:fontFamily="@string/font_serif"
                        android:inputType="textCapWords"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/not_set"
                        android:textAllCaps="false"
                        android:textColor="@color/color_black"
                        android:textColorHint="@color/gray70"
                        android:textSize="@dimen/sp_14"
                        tools:ignore="UnusedAttribute" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@color/color_white">

                    <TextView
                        android:id="@+id/headerFoundedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_serif"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/founded_date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/headerFoundedDate"
                        android:fontFamily="@string/font_serif"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="@string/not_set"
                        android:textColor="@color/gray70"
                        android:textSize="@dimen/sp_13"
                        tools:ignore="UnusedAttribute" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:padding="@dimen/dp_10"
                        app:srcCompat="@drawable/ic_next_right" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@color/color_white">

                    <TextView
                        android:id="@+id/headerNumberStaff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_serif"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="@string/number_of_staff"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/headerNumberStaff"
                        android:fontFamily="@string/font_serif"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="@string/staff_empty"
                        android:textColor="@color/gray70"
                        android:textSize="@dimen/sp_14"
                        tools:ignore="UnusedAttribute" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@color/color_white">

                    <TextView
                        android:id="@+id/headerOpenTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_serif"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="Thời gian mở cửa"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/headerOpenTime"
                        android:fontFamily="@string/font_serif"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="@string/not_set"
                        android:textColor="@color/gray70"
                        android:textSize="@dimen/sp_13"
                        tools:ignore="UnusedAttribute" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:padding="@dimen/dp_10"
                        app:srcCompat="@drawable/ic_next_right" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@color/color_white">

                    <TextView
                        android:id="@+id/headerFreeTransport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_serif"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="Miễn phí vận chuyển với đơn hàng từ"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/headerFreeTransport"
                        android:fontFamily="@string/font_serif"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="@string/not_set"
                        android:textColor="@color/gray70"
                        android:textSize="@dimen/sp_13"
                        tools:ignore="UnusedAttribute" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:padding="@dimen/dp_10"
                        app:srcCompat="@drawable/ic_next_right" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_1"
                    android:background="@color/color_white"
                    android:drawableEnd="@drawable/ic_expand"
                    android:drawablePadding="@dimen/dp_15"
                    android:drawableRight="@drawable/ic_expand"
                    android:fontFamily="@string/font_serif"
                    android:padding="@dimen/dp_10"
                    android:text="@string/company_description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="UnusedAttribute" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/color_white">

                    <TextView
                        android:id="@+id/headerAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_1"
                        android:fontFamily="@string/font_serif"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_10"
                        android:text="Địa chỉ"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/headerAddress"
                        android:drawableEnd="@drawable/ic_alert_circle_mini"
                        android:drawablePadding="@dimen/dp_15"
                        android:drawableRight="@drawable/ic_alert_circle_mini"
                        android:fontFamily="@string/font_serif"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:text="Chưa thiết lập"
                        android:textColor="@color/gray70"
                        android:textSize="@dimen/sp_13"
                        tools:ignore="UnusedAttribute" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/map"
                        class="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_250" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@color/transparent"
                        android:padding="@dimen/dp_10"
                        app:srcCompat="@drawable/ic_get_location" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/transparent"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/transparent"
                    app:srcCompat="@drawable/ic_back_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/back"
                    android:text="@string/profile_company"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/sp_18" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </RelativeLayout>
</layout>