<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/validate_opt"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_18"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/text_intro_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_120"
        android:text="@string/intro_validate_otp"
        android:lines="3"
        android:textAlignment="center"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/color_white"
        />

    <RelativeLayout
        android:id="@+id/containerInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_below="@+id/text_intro_get"
        android:background="@color/color_white">
        <EditText
            android:id="@+id/text_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_text"
            android:drawableLeft="@drawable/ic_code_tags"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@drawable/ic_code_tags"
            android:fontFamily="@string/font_serif"
            android:hint="@string/otp_code"
            android:inputType="textCapWords"
            android:textAllCaps="false"
            android:paddingEnd="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/color_black"
            android:textColorHint="@color/gray70"
            android:textSize="@dimen/sp_20"
            tools:ignore="UnusedAttribute"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_2"
            android:background="@color/gray27"
            android:layout_below="@+id/text_otp"
            android:layout_alignLeft="@+id/text_otp"
            android:layout_alignRight="@+id/text_otp"
            android:layout_marginBottom="@dimen/dp_20"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/containerInput"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:paddingRight="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_30"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="@string/get_new_otp"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/waiting_for_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_resend_otp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_white"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@string/font_serif"
        android:text="@string/done"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        tools:ignore="UnusedAttribute"
        />
</RelativeLayout>
