<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="vn.needy.vendor.screen.notificationSetting.NotificationSettingViewModel" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:clickable="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/transparent"
                android:onClick="@{() -> viewModel.onBackPressed()}"
                app:srcCompat="@drawable/ic_back_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back"
                android:text="@string/notification_tab"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_18" />

            <ImageButton
                android:onClick="@{() -> viewModel.onNotificationSave()}"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"
                app:srcCompat="@drawable/ic_check" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_0_mid"
                        android:background="@color/color_white"
                        android:drawablePadding="@dimen/dp_10"
                        android:fontFamily="@string/font_serif"
                        android:onClick="@{() -> viewModel.onNotificationCLick()}"
                        android:padding="@dimen/dp_10"
                        android:text="@string/notification_tab"
                        android:textAllCaps="false"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/sp_16"
                        app:srcDrawableRight="@{viewModel.iconNotification}"
                        tools:ignore="UnusedAttribute" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="@{viewModel.getShowNotificationSetting == true ? View.VISIBLE : View.GONE}">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{()->viewModel.onNotificationSetting()}">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_serif"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_10"
                                android:text="@string/notification_tab"
                                android:textAllCaps="false"
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/sp_13" />

                            <android.support.v7.widget.SwitchCompat
                                android:onClick="@{()->viewModel.onNotificationSetting()}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/transparent"
                                android:checked="@{viewModel.Notification}"
                                android:padding="@dimen/dp_10" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="@{viewModel.Notification == true ? View.VISIBLE : View.GONE}">


                            <LinearLayout
                                android:onClick="@{() -> viewModel.onNotificationGroupClick()}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="8">

                                <LinearLayout

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@string/font_serif"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:paddingTop="@dimen/dp_10"
                                        android:text="@string/notification_setting_group_name"
                                        android:textAllCaps="false"
                                        android:textColor="@color/color_black"
                                        android:textSize="@dimen/sp_13" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/dp_10"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:paddingRight="@dimen/dp_8"
                                        android:text="@string/notification_setting_group"
                                        android:textAllCaps="false"
                                        android:textSize="@dimen/sp_13" />
                                </LinearLayout>

                                <android.support.v7.widget.SwitchCompat
                                    android:onClick="@{() -> viewModel.onNotificationGroupClick()}"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="2"
                                    android:background="@color/transparent"
                                    android:checked="@{viewModel.notificationGroup}"
                                    android:padding="@dimen/dp_10" />
                            </LinearLayout>

                            <RelativeLayout
                                android:onClick="@{() ->viewModel.onNotificationUpdateProductClick()}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/font_serif"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:paddingTop="@dimen/dp_10"
                                    android:text="@string/update_order"
                                    android:textAllCaps="false"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/sp_13" />

                                <android.support.v7.widget.SwitchCompat
                                    android:onClick="@{() ->viewModel.onNotificationUpdateProductClick()}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/transparent"
                                    android:checked="@{viewModel.notificationUpdateProduct}"
                                    android:padding="@dimen/dp_10" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:onClick="@{()->viewModel.onNotificationChatClick()}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/font_serif"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:paddingTop="@dimen/dp_10"
                                    android:text="@string/notification_setting_chat"
                                    android:textAllCaps="false"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/sp_13" />

                                <android.support.v7.widget.SwitchCompat
                                    android:onClick="@{()->viewModel.onNotificationChatClick()}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/transparent"
                                    android:checked="@{viewModel.notificationChat}"
                                    android:padding="@dimen/dp_10" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:onClick="@{()->viewModel.onNotificationProductPromotionClick()}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/font_serif"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:paddingTop="@dimen/dp_10"
                                    android:text="@string/product_promotion"
                                    android:textAllCaps="false"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/sp_13" />

                                <android.support.v7.widget.SwitchCompat
                                    android:onClick="@{()->viewModel.onNotificationProductPromotionClick()}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/transparent"
                                    android:checked="@{viewModel.notificationPromotion}"
                                    android:padding="@dimen/dp_10" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:onClick="@{() -> viewModel.onNotificationFollowCLick()}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/font_serif"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:paddingTop="@dimen/dp_10"
                                    android:text="@string/notification_setting_follow"
                                    android:textAllCaps="false"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/sp_13" />

                                <android.support.v7.widget.SwitchCompat
                                    android:onClick="@{() -> viewModel.onNotificationFollowCLick()}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/transparent"
                                    android:checked="@{viewModel.notificationFollow}"
                                    android:padding="@dimen/dp_10" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:onClick="@{() -> viewModel.onNotificationProductEndCLick()}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/font_serif"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:paddingTop="@dimen/dp_10"
                                    android:text="@string/notification_setting_product_end"
                                    android:textAllCaps="false"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/sp_13" />

                                <android.support.v7.widget.SwitchCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/transparent"
                                    android:checked="@{viewModel.notificationProducEnd}"
                                    android:onClick="@{() -> viewModel.onNotificationProductEndCLick()}"
                                    android:padding="@dimen/dp_10" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:onClick="@{() ->viewModel.onNotificationUpdateAppClick()}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@string/font_serif"
                                    android:paddingLeft="@dimen/dp_10"
                                    android:paddingTop="@dimen/dp_10"
                                    android:text="@string/notification_setting_update"
                                    android:textAllCaps="false"
                                    android:textColor="@color/color_black"
                                    android:textSize="@dimen/sp_13" />

                                <android.support.v7.widget.SwitchCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/transparent"
                                    android:checked="@{viewModel.notificationUpdateApp}"
                                    android:onClick="@{() ->viewModel.onNotificationUpdateAppClick()}"
                                    android:padding="@dimen/dp_10" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_0_mid"
                        android:background="@color/color_white"
                        android:drawablePadding="@dimen/dp_10"
                        android:fontFamily="@string/font_serif"
                        android:onClick="@{() -> viewModel.onNotificationEmailCLick()}"
                        android:padding="@dimen/dp_10"
                        android:text="@string/notification_email"
                        android:textAllCaps="false"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/sp_16"
                        app:srcDrawableRight="@{viewModel.iconNotificationEmail}"
                        tools:ignore="UnusedAttribute" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="@{viewModel.getShowNotificationEmailSetting == true ? View.VISIBLE : View.GONE}">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{() -> viewModel.onNotificationSettingEmail()}">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_serif"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingTop="@dimen/dp_10"
                                android:text="@string/notification_email_order"
                                android:textAllCaps="false"
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/sp_13" />

                            <android.support.v7.widget.SwitchCompat
                                android:onClick="@{() -> viewModel.onNotificationSettingEmail()}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/transparent"
                                android:checked="@{viewModel.notificationEmail}"
                                android:padding="@dimen/dp_10" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="@{viewModel.notificationEmail == true ? View.VISIBLE : View.GONE}">

                            <LinearLayout
                                android:onClick="@{()->viewModel.onNotificationProductClick()}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="8">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@string/font_serif"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:paddingTop="@dimen/dp_10"
                                        android:text="@string/notification_email_update_product"
                                        android:textAllCaps="false"
                                        android:textColor="@color/color_black"
                                        android:textSize="@dimen/sp_13" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/dp_10"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:paddingRight="@dimen/dp_8"
                                        android:text="@string/notification_email_product_detail"
                                        android:textAllCaps="false"
                                        android:textSize="@dimen/sp_13" />
                                </LinearLayout>

                                <android.support.v7.widget.SwitchCompat
                                    android:onClick="@{()->viewModel.onNotificationProductClick()}"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="2"
                                    android:background="@color/transparent"
                                    android:checked="@{viewModel.notificationProduct}"
                                    android:padding="@dimen/dp_10" />
                            </LinearLayout>

                            <LinearLayout
                                android:onClick="@{() -> viewModel.notificationEmailApp()}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="8">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@string/font_serif"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:paddingTop="@dimen/dp_10"
                                        android:text="@string/notification_email_app"
                                        android:textAllCaps="false"
                                        android:textColor="@color/color_black"
                                        android:textSize="@dimen/sp_13" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/dp_10"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:paddingRight="@dimen/dp_8"
                                        android:text="@string/notification_email_app_detail"
                                        android:textAllCaps="false"
                                        android:textSize="@dimen/sp_13" />
                                </LinearLayout>

                                <android.support.v7.widget.SwitchCompat
                                    android:onClick="@{() -> viewModel.notificationEmailApp()}"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="2"
                                    android:background="@color/transparent"
                                    android:checked="@{viewModel.notificationApp}"
                                    android:padding="@dimen/dp_10" />
                            </LinearLayout>

                            <LinearLayout
                                android:onClick="@{()->viewModel.notificationNewClick()}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="8">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@string/font_serif"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:paddingTop="@dimen/dp_10"
                                        android:text="@string/notification_email_news"
                                        android:textAllCaps="false"
                                        android:textColor="@color/color_black"
                                        android:textSize="@dimen/sp_13" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/dp_10"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:paddingRight="@dimen/dp_8"
                                        android:text="@string/notificatino_email_news_detail"
                                        android:textAllCaps="false"
                                        android:textSize="@dimen/sp_13" />
                                </LinearLayout>

                                <android.support.v7.widget.SwitchCompat
                                    android:onClick="@{()->viewModel.notificationNewClick()}"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="2"
                                    android:background="@color/transparent"
                                    android:checked="@{viewModel.notificationNew}"
                                    android:padding="@dimen/dp_10" />
                            </LinearLayout>

                            <LinearLayout
                                android:onClick="@{() -> viewModel.onNotificationPersonalClick()}"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="8">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="6"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@string/font_serif"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:paddingTop="@dimen/dp_10"
                                        android:text="@string/notification_email_personal"
                                        android:textAllCaps="false"
                                        android:textColor="@color/color_black"
                                        android:textSize="@dimen/sp_13" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/dp_10"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:paddingRight="@dimen/dp_8"
                                        android:text="@string/notification_email_personal_detail"
                                        android:textAllCaps="false"
                                        android:textSize="@dimen/sp_13" />
                                </LinearLayout>

                                <android.support.v7.widget.SwitchCompat
                                    android:onClick="@{() -> viewModel.onNotificationPersonalClick()}"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="2"
                                    android:background="@color/transparent"
                                    android:checked="@{viewModel.notificationPersonal}"
                                    android:padding="@dimen/dp_10" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>