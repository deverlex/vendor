<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_170"
            android:background="@color/color_gray_mos">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <vn.needy.vendor.widget.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_56"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/ic_placeholder" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/avatar"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_35"
                android:textColor="@color/color_white"
                android:text="Nguyen Van Do"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:fontFamily="@string/font_serif" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">
            <TextView
                android:id="@+id/headerPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_1"
                android:fontFamily="@string/font_serif"
                android:text="Số điện thoại"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:fontFamily="@string/font_serif"
                android:text="******244"
                android:textColor="@color/gray70"
                android:textSize="@dimen/sp_13"
                android:layout_below="@+id/headerPhoneNumber"
                tools:ignore="UnusedAttribute" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_next_right"
                android:background="@color/transparent"
                android:padding="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_serif"
            android:text="Đặt lại mật khẩu"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:padding="@dimen/dp_10"
            android:drawableEnd="@drawable/ic_next_right"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/ic_next_right"
            android:background="@color/color_white"
            android:layout_marginTop="@dimen/dp_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_serif"
                android:text="Tên hiển thị"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                tools:ignore="UnusedAttribute" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_text"
                android:drawableEnd="@drawable/ic_check_circle_mini"
                android:drawablePadding="@dimen/dp_15"
                android:drawableRight="@drawable/ic_check_circle_mini"
                android:fontFamily="@string/font_serif"
                android:hint="Chưa thiết lập"
                android:inputType="textCapWords"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:textAllCaps="false"
                android:textColor="@color/color_black"
                android:textColorHint="@color/gray70"
                android:textSize="@dimen/sp_14"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:layout_marginTop="@dimen/dp_1"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="serif"
                android:text="@string/gender"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/dp_5">
                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/male"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray70"
                    android:buttonTint="@color/colorPrimary"
                    />
                <View
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_0" />
                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray70"
                    android:checked="true"
                    android:buttonTint="@color/colorPrimary"
                    />
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:layout_marginTop="@dimen/dp_1">
            <TextView
                android:id="@+id/headerBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:fontFamily="@string/font_serif"
                android:text="Ngày sinh"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:fontFamily="@string/font_serif"
                android:text="Chưa thiết lập"
                android:textColor="@color/gray70"
                android:textSize="@dimen/sp_13"
                android:layout_below="@+id/headerBirthday"
                tools:ignore="UnusedAttribute" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_next_right"
                android:background="@color/transparent"
                android:padding="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:layout_marginTop="@dimen/dp_1">
            <TextView
                android:id="@+id/headerEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:fontFamily="@string/font_serif"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:layout_below="@+id/headerEmail"
                android:fontFamily="@string/font_serif"
                android:text="Chưa thiết lập"
                android:textColor="@color/gray70"
                android:textSize="@dimen/sp_13"
                tools:ignore="UnusedAttribute" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_next_right"
                android:background="@color/transparent"
                android:padding="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_white">
            <TextView
                android:id="@+id/headerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:fontFamily="@string/font_serif"
                android:text="Địa chỉ"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:drawableEnd="@drawable/ic_alert_circle_mini"
                android:drawablePadding="@dimen/dp_15"
                android:drawableRight="@drawable/ic_alert_circle_mini"
                android:layout_below="@+id/headerAddress"
                android:fontFamily="@string/font_serif"
                android:text="Chưa thiết lập"
                android:textColor="@color/gray70"
                android:textSize="@dimen/sp_13"
                tools:ignore="UnusedAttribute" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <fragment
                android:id="@+id/map"
                class="com.google.android.gms.maps.SupportMapFragment"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_get_location"
                android:background="@color/transparent"
                android:padding="@dimen/dp_10"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/transparent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/transparent"
                app:srcCompat="@drawable/ic_back_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back"
                android:text="@string/profile_personal"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_18" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>
