<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/dp_3"
    app:cardCornerRadius="@dimen/dp_2"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools">

        <vn.needy.vendor.widget.CircleImageView
            android:id="@+id/picture"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_gravity="bottom|left"
            android:layout_margin="@dimen/dp_10"
            android:src="@drawable/ic_placeholder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/picture"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:fontFamily="@string/font_serif"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                android:padding="@dimen/dp_5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_serif"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"
                android:text="Describe of order"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_clock_mini"
                android:background="@color/color_white"
                android:drawablePadding="@dimen/dp_10"
                android:drawableStart="@drawable/ic_clock_mini"
                android:fontFamily="@string/font_serif"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"
                android:text="Times schedule"
                android:paddingLeft="@dimen/dp_5" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:layout_alignParentRight="true"
            android:background="@drawable/border_price"
            android:padding="@dimen/dp_7"
            android:textColor="@color/color_red_mos"
            android:textSize="@dimen/sp_12"
            android:text="Đã giao"
            tools:ignore="RelativeOverlap"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
