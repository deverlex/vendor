<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="vn.needy.vendor.screen.registerUser.RegisterUserViewModel"
            />
        <import type="android.view.View" />
    </data>

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".screen.registerUser.RegisterUserActivity"
            tools:ignore="ScrollViewSize">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimaryDark"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/create_new_account"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/sp_18"
                        />
                    <ImageButton
                        android:layout_width="?attr/actionBarSize"
                        android:layout_height="?attr/actionBarSize"
                        app:srcCompat="@drawable/ic_back_left"
                        android:background="@color/transparent"
                        android:onClick="@{() -> viewModel.onBackPressed()}"
                        />
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/containerInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:background="@color/color_white">
                <EditText
                    android:id="@+id/text_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:drawableLeft="@{@drawable/ic_account}"
                    android:background="@drawable/background_text"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableStart="@{@drawable/ic_account}"
                    android:fontFamily="@string/font_serif"
                    android:hint="@string/first_name"
                    android:text="@={viewModel.firstName}"
                    android:inputType="textCapWords"
                    android:textAllCaps="false"
                    android:paddingEnd="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_10"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/gray70"
                    app:errorText="@{viewModel.firstNameError}"
                    tools:ignore="UnusedAttribute"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray27"
                    android:layout_below="@+id/text_first_name"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    />
                <EditText
                    android:id="@+id/text_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_first_name"
                    android:padding="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:drawableLeft="@{@drawable/ic_account}"
                    android:background="@drawable/background_text"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableStart="@{@drawable/ic_account}"
                    android:fontFamily="@string/font_serif"
                    android:hint="@string/last_name"
                    android:text="@={viewModel.lastName}"
                    android:inputType="textCapWords"
                    android:textAllCaps="false"
                    android:paddingEnd="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_10"
                    android:textColor="@color/color_black"
                    android:textColorHint="@color/gray70"
                    app:errorText="@{viewModel.lastNameError}"
                    tools:ignore="UnusedAttribute"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray27"
                    android:layout_below="@+id/text_last_name"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"/>
                <TextView
                    android:id="@+id/text_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_last_name"
                    android:padding="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:drawableLeft="@{@drawable/ic_cellphone}"
                    android:background="@drawable/background_text"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableStart="@{@drawable/ic_cellphone}"
                    android:fontFamily="@string/font_serif"
                    android:text="@={viewModel.phoneNumber}"
                    android:textAllCaps="false"
                    android:paddingEnd="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_5"
                    android:paddingStart="@dimen/dp_10"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/sp_18"
                    tools:ignore="UnusedAttribute"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray27"
                    android:layout_below="@+id/text_phone_number"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"/>

                <RelativeLayout
                    android:id="@+id/containerInputPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_phone_number"
                    >
                    <EditText
                        android:id="@+id/text_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/viewPasswordButton"
                        android:background="@drawable/background_text"
                        android:drawableLeft="@{@drawable/ic_lock}"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableStart="@{@drawable/ic_lock}"
                        android:fontFamily="serif"
                        android:hint="@string/password"
                        android:text="@={viewModel.password}"
                        android:inputType="textPassword"
                        android:paddingEnd="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingStart="@dimen/dp_10"
                        android:textColor="@color/color_black"
                        android:textColorHint="@color/gray70"
                        android:textSize="@dimen/sp_16"
                        android:onTextChanged="@{viewModel::onTextChanged}"
                        app:transformationMethod="@{viewModel.transformationMethod}"
                        app:errorText="@{viewModel.passwordError}"
                        tools:ignore="UnusedAttribute"
                        />
                    <ImageButton
                        android:id="@+id/viewPasswordButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcVector="@{viewModel.drawableShowPassword}"
                        android:padding="@dimen/dp_5"
                        android:background="@color/color_white"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:visibility="@{viewModel.visibleShowPassword? View.VISIBLE : View.GONE}"
                        android:onClick="@{() -> viewModel.onViewPasswordClick()}"
                        />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray27"
                    android:layout_below="@+id/containerInputPassword"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"/>
                <LinearLayout
                    android:id="@+id/containerInputGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/containerInputPassword"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:background="@drawable/background_text"
                        android:drawableLeft="@{@drawable/ic_gender}"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableStart="@{@drawable/ic_gender}"
                        android:fontFamily="serif"
                        android:text="@string/gender"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/gray70"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginRight="@dimen/dp_20"
                        android:onCheckedChanged="@{viewModel::onCheckedChanged}">
                        <RadioButton
                            android:id="@+id/rbMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/male"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/gray70"
                            android:buttonTint="@color/colorPrimary"
                            />
                        <RadioButton
                            android:id="@+id/rbFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ná»¯"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/gray70"
                            android:checked="true"
                            android:buttonTint="@color/colorPrimary"
                            />
                    </RadioGroup>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/gray27"
                    android:layout_below="@+id/containerInputGender"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/containerInputGender"
                    android:paddingBottom="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    >
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/locateButton"
                        android:drawableLeft="@{@drawable/ic_home_map}"
                        android:background="@drawable/background_text"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableStart="@{@drawable/ic_home_map}"
                        android:fontFamily="@string/font_serif"
                        android:hint="@string/home_address"
                        android:text="@={viewModel.address}"
                        android:inputType="textCapWords"
                        android:textAllCaps="false"
                        android:paddingEnd="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingStart="@dimen/dp_10"
                        android:textColor="@color/color_black"
                        android:textColorHint="@color/gray70"
                        android:textSize="@dimen/sp_16"
                        tools:ignore="UnusedAttribute"
                        />

                    <ImageButton
                        android:id="@+id/locateButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_20"
                        app:srcCompat="@drawable/ic_map_marker"
                        android:background="@color/color_white"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/policies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:text="@string/policies"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_16"
                android:fontFamily="@string/font_serif"
                android:padding="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_alignRight="@+id/containerInput"
                android:layout_below="@+id/containerInput" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@string/font_serif"
                android:onClick="@{() -> viewModel.onRegisterClick()}"
                android:text="@string/done"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                tools:ignore="UnusedAttribute"
                />
        </RelativeLayout>
    </ScrollView>
</layout>